!=====================================================
! Test setup of 2D KH setup as in the paper
! See http://amrvac.org/md_doc_par.html for parameters
!=====================================================

 &filelist
   base_filename    = 'SimData/kh_2d_'
   autoconvert      = T
   convert_type     = 'vtuBmpi'
   saveprim         = T
 /

 &savelist
   itsave(1,1)     = 0
   itsave(1,2)     = 0
   dtsave_log       = 1.0d0
   dtsave_dat       = 1.0d0
 /

 &stoplist
   time_max=14.3d0
 /

 &methodlist
   time_stepper = 'threestep'
   flux_scheme  = 20*'hllc'
   limiter      = 20*'cada3'
 /

 &boundlist
   typeboundary_min1 = 4*'periodic'
   typeboundary_max1 = 4*'periodic'
   !typeboundary_min2 = 4*'special'
   !typeboundary_max2 = 4*'special'
   !! The order should normally be "rho, m1, m2, e"
   !! I'm not sure about 'cont', this is just a placeholder for now
   typeboundary_min2 = 'cont', 'special', 'special', 'cont'
   typeboundary_max2 = 'cont', 'special', 'special', 'cont'
   !typeboundary_min2 = 4*'periodic'
   !typeboundary_max2 = 4*'periodic'
 /

 &meshlist
   refine_max_level   = 1
   block_nx1          = 10
   block_nx2          = 10
   domain_nx1         = 50
   domain_nx2         = 50
   xprobmin1       = 0.0d0
   xprobmax1       = 1.0d0
   xprobmin2       = 0.0d0
   xprobmax2       = 1.0d0
   iprob=1
 /

 &paramlist
   slowsteps        = 10
   courantpar       = 0.8d0
   typecourant      = 'maxsum'
 /